<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nwanvu.example.objectanimator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb">

        <include layout="@layout/view_tutorial_man_4" />

        <include layout="@layout/view_tutorial_man_3" />

        <include layout="@layout/view_tutorial_man_2" />

        <include layout="@layout/view_tutorial_man_1" />

        <View
            android:id="@+id/touchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp" />

        <RadioGroup
            android:id="@+id/cbIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:checkedButton="@+id/cb_w1"
            android:clickable="false"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/cb_w1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tutorial_indicator"
                android:button="@null"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/cb_w2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tutorial_indicator"
                android:button="@null"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/cb_w3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tutorial_indicator"
                android:button="@null"
                android:clickable="false" />

            <RadioButton
                android:id="@+id/cb_w4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/tutorial_indicator"
                android:button="@null"
                android:clickable="false" />
        </RadioGroup>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/AppTheme.PopupOverlay" />
</android.support.design.widget.CoordinatorLayout>